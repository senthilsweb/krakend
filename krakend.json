{
    "version": 2,
    "name": "zypress api gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "5s",
    "endpoints": [
      {
        "endpoint": "/rest/v1/__health",
        "method": "GET",
        "backend": [
          {
            "host": [
              "http://zygo-service:3000"
            ],
            "url_pattern": "/api/ping"
          }
        ]
      },
      {
        "endpoint": "/rest/v1/contacts",
        "method": "GET",
        "backend": [
          {
            "host": [
              "http://zygo-service:3000"
            ],
            "url_pattern": "/api/contacts"
          }
        ]
      }
    ]
  }